<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/title"
        android:background="#537DC9"
        android:gravity="center_vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RecylerView示例"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:textColor="#ffffff"
            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:onClick="basic"
                android:text="基本使用"
                android:textSize="15sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="simple"
                android:text="简单封装"
                android:textSize="15sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="devider"
                android:text="间隔线"
                android:textSize="15sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="addHeaderAndFooter"
                android:text="添加头部和底部"
                android:textSize="15sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="itemTouch"
                android:text="条目交互动画"
                android:textSize="15sp"
                android:textAllCaps="false"
                />
            <Button
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:onClick="setRefreshAndLoad"
                android:text="下拉刷新与上拉加载"
                android:textSize="15sp"
                android:textAllCaps="false"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>